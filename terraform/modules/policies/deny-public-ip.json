{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Network/publicIPAddresses"
        },
        {
          "not": {
            "anyOf": [
              {
                "field": "tags['AllowPublicIP']",
                "equals": "true"
              },
              {
                "field": "name",
                "like": "*firewall*"
              },
              {
                "field": "name",
                "like": "*bastion*"
              }
            ]
          }
        }
      ]
    },
    "then": {
      "effect": "deny"
    }
  },
  "parameters": {},
  "displayName": "TRL - Deny creation of public IP addresses except for firewall and bastion",
  "description": "This policy denies the creation of public IP addresses to enforce private networking, with exceptions for Azure Firewall and Bastion services.",
  "metadata": {
    "category": "Network",
    "version": "1.0.0",
    "source": "TRL Hub and Spoke Architecture"
  }
}

